{
  "env": {
    "node": true,
    "amd": true
  },
  "globals": {
    "Promise": true
  },
  "parserOptions": {
    // Required for certain syntax usages
    "ecmaVersion": 8
  },
  "plugins": ["es5", "promise"],
  "extends": ["eslint:recommended", "plugin:promise/recommended"],
  "rules": {
    // Removed rule "disallow the use of console" from recommended eslint rules
    "no-console": "off"
  }
}
